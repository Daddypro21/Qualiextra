    <body>
        {# ....navbar..... #}

<main class="mb-5">
  <header class="p-3 mb-3 border-bottom">
    <div class="container">
      <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
        <a href="/" class="d-flex align-items-center me-5 mb-2 mb-lg-0 text-dark text-decoration-none">
           <b> QUALIEXTRA</b>
        </a>

        <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
          <li><a href="{{path('app_home')}}" class="nav-link px-2 link-dark">Accueil</a></li>
          <li><a href="#" class="nav-link px-2 link-dark">Apropos</a></li>
        </ul>

        
          {% if app.user %}
        <div class="dropdown text-end">
          <a href="#" class="d-block link-dark text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
            <img src="https://media.licdn.com/dms/image/C4D03AQGQnaJHlMv9Gg/profile-displayphoto-shrink_800_800/0/1647413990843?e=2147483647&v=beta&t=xNSFPywLeLwhDu1S-gorJoQEJ9Fr3fd3s52TNMvK0sQ" alt="mdo" width="32" height="32" class="rounded-circle">
          </a>
          <ul class="dropdown-menu text-small" aria-labelledby="dropdownUser1">
            <li>{% if app.user.roles[0] is same as 'ROLE_HOTEL' %}<a class="dropdown-item" href="{{path('app_hotel_profil')}}">Compte</a>{% else %}<a class="dropdown-item" href="{{path('app_benevole_dashboard')}}">Compte</a>{% endif %}</li>
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item" href="{{path('app_logout')}}">Deconnexion</a></li>
          </ul>
        </div>
        {% else %}
          <ul class="">
            <li><b><a href="{{path('app_login')}}" class="nav-link px-2 link-dark lien_hover">Se connecter</a></b></li>
          </ul>
        {% endif %}
      </div>
    </div>
  </header>

</main>
       

      <div class="container">
          {% for type, messages in app.flashes %}
                      {% for message in messages %}
                          <div class="alert alert-{{ type }}" role="alert">
                             <h3 class="text-center"> {{ message }} </h3>
                          </div>
                      {% endfor %}
          {% endfor %}
      </div>
      {% block body %}{% endblock %}
