{% extends 'base.html.twig' %}
 
{% block title %}Modifier le don{% endblock %}

{% block body %}
 {% if app.user.isVerified is defined and  app.user.isVerified == 1 %}
    <h2 class="text-center">Modifier le don</h2>
    <div class="row mt-5 mb-5">
        <div class="col-6 mx-auto  bg-light pt-5 pe-5 pl-5 pb-2">
            {{ form_start(form)}}
                {{form_row(form.kindOfDonation)}}
                {{form_row(form.description)}}
                {{form_row(form.recoveryDate,{ 'label':'Définissez la date et l\'heure où le don pourra être récuperé'})}}
                {{form_row(form.availablity,{'label':'Disponible'})}}
            <button type="submit" class="btn btn-primary w-50 mx-auto"> Valider </button>
            {{form_end(form)}}
        </div>
    </div>
{% else %}
    <h2 class="text-center pe-2 pt-2 pb-2 ps-2 bg-warning"> Activer votre compte </h2>
{% endif %}
{% endblock %}