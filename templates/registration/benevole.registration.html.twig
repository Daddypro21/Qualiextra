{% extends 'base.html.twig' %}

{% block title %}Benevole registration{% endblock %}

{% block body %}
<h1 class="text-center"> <b>Créer votre compte facilement</b></h1>
<div class="container  mt-5 mb-5">
    <div class="row">
        <div class="col-6 mx-auto bg-light pt-5 pe-5 pb-5 pl-5">
            {{ form_start(form)}}

                <div class="row mb-4">
                    <div class="col">
                        {{form_row(form.name)}}
                    </div>
                    <div class="col">
                        {{form_row(form.firstName)}}
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col">
                        {{form_row(form.email)}}
                    </div>
                    <div class="col">
                        {{form_row(form.numberPhone)}}
                    </div>
                </div>

                <button type="submit" class="btn button_2 w-100 mt-5" > Valider </button>
            {{form_end(form)}}

            <p class="mt-2 mb-2"> Vous avez déjà un compte ?<a href="{{path('app_login')}}" class="text-decoration-none"> Connectez vous</a> </p>
        </div>
    </div>
</div>
{% endblock %}
